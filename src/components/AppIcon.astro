---
import { Picture } from 'astro:assets'

interface Props {
	name: string
	image: string
	url: string
}
const { url, image, name } = Astro.props

const isSvgImage = image.endsWith('.svg')
---

<a class="item-center flex flex-col items-center gap-2" href={url}>
	{
		isSvgImage ? (
			<img class="size-16 rounded-full md:size-20" src={image} alt={name} />
		) : (
			<Picture
				src={image}
				alt={name}
				class="size-16 rounded-full md:size-20"
				width={64}
				height={64}
				densities={[1.5, 2, 3]}
				quality={80}
				formats={['webp', 'avif']}
				fallbackFormat="jpeg"
			/>
		)
	}
	<p>{name}</p>
</a>
